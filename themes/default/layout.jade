doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic|Roboto+Slab:400,700")
    link(rel="stylesheet", type="text/css", href="/default/css/normalize.css")
    link(rel="stylesheet", type="text/css", href="/default/css/skeleton.css")
    link(rel="stylesheet", type="text/css", href="/default/css/typography.css")
    link(rel="stylesheet", type="text/css", href="/default/css/styles.css")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    title Content

  body
    .navigation.row
      a(href="/")
        img.logo(src="/img/logo.png", alt="CONTENT CMS")
      .u-pull-right.nav-options
        if !loggedIn
          a(href="/signin")
            span.fa.fa-sign-in.fa-2x
        else
          a(href="/admin")  
            span.fa.fa-pencil-square-o.fa-2x
          a(href="/logout") 
            span.fa.fa-sign-out.fa-2x

      
    block content
    