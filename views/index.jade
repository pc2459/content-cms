extends layout

block content

  .container.main
    if posts
      for post in posts
        .div.post-item
          h3.post-title 
            a(href="/#{post._id}") #{post.title}
          p.post-byline 
            | Written by 
            a(href="/#{post.owner}") #{post.ownerName}
          p.post-preview #{post.body}
        hr